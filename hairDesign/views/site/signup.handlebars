<main class="Form my-4 mx-5">
      <div class="container">
        <div class="row g-0">
          <div class="col-lg-5">
            {{!-- <img src="/img/log-ing.1.jpg" class="img-fluid" alt="" /> --}}
          </div>
          <div class="col-lg-7 px-5 pt-5">
            <h1 class="font-weight-bold py-3">Shear&Style</h1>
            <h4>Sign Up your account</h4>
            <form action="/users/signup" method="POST">
              <div class="form-row">
                <div class="col-lg-7">
                  <input
                    name="email"
                    type="email"
                    placeholder="Email-Address"
                    class="form-control my-3 p-3"
                  />
                </div>
              </div>
              <div class="form-row">
                <div class="col-lg-7">
                  <input
                    name="password"
                    type="password"
                    placeholder="******"
                    class="form-control my-3 p-3"
                  />
                </div>
              </div>
              <div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button id="sendRegisterButton" class="main-btn" type="submit">Register</button>
						</div>
            </form>
          </div>
        </div>
      </div>
    </main>